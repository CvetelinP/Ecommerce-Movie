@model IEnumerable<Producer>

    @{
    ViewData["Title"] = "List of Producers";
}
<h1 class="text-center">All Producers</h1>
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(m =>m.ProfilePictureUrl)</th>
                <th>@Html.DisplayNameFor(m =>m.FullName)</th>
                <th>@Html.DisplayNameFor(m =>m.Bio)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var producer in Model)
            {
                <tr class="text-center">
                    <td class="align-middle">
                        <img class="rounded-circle" src="@producer.ProfilePictureUrl" alt=@producer.FullName style="max-width: 150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(m=> producer.FullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(m=> producer.Bio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@producer.Id"><i class="bi bi-pencil-square">Edit</i></a> |
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@producer.Id"><i class="bi bi-eye">Details</i></a> |
                        <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@producer.Id"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                </tr>
            }

            </tbody>
        </table>

    </div>
</div>

@await Html.PartialAsync("_CreateItem","Producers")